{
  "compilerOptions": {
    "extends": "../tsconfig.json",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["**/*", ".vitepress/**/*"]
}
